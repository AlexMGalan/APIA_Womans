<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/colorWhite">

    <ImageView
        android:id="@+id/imageViewLB"
        android:layout_width="273dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/firstgradegf" />

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Round"
        android:textSize="18dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.acacias.altfc.MatchFragment">

        <TextView
        android:id="@+id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"     />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDate"
        tools:context="com.acacias.altfc.MatchFragment">

        <ImageView
            android:id="@+id/imageViewHOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/textViewVS"
            android:src="@mipmap/southern_branch" />

        <TextView
            android:id="@+id/textViewHome"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewHOME"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/textViewVS"
            android:text="APIA"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center|center_vertical"
            android:text="Vs"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewVISIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textViewVS"
            android:src="@mipmap/apia_logo" />

        <TextView
            android:id="@+id/textViewVisit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewVISIT"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/textViewVS"
            android:text="SB"
            android:textSize="20dp"
            android:gravity="center"/>

    </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        tools:context="com.acacias.altfc.MatchFragment">

        <TextView
            android:id="@+id/textViewGround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Lambert park"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewMAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textViewGround"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="( Map )"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="First Grade: 7:00pm"
        android:gravity="center"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/textViewres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserve Grade: 5:00pm"
        android:gravity="center"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/textViewr17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="u17: 3:00pm"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="u15: 1:00pm"
        android:gravity="center"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="u14: 11:00am"
        android:textSize="14dp" />



</LinearLayout>
