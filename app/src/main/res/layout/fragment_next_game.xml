<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/flag"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/grass2" />

<!--            <TextView
               android:id="@+id/textview"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:lines="3"
                android:padding="5dp"
                android:text="13 March 2019 Lambert Park 20-22 Marion St, Leichhardt"
                android:textColor="@color/colorblack"
                android:textSize="10dp" />-->

            <TextView
                android:id="@+id/textviewDate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="#07000000"
                android:text="13 March 2019"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewGround"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewDate"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="#07000000"
                android:text="Lambert Park"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textviewAddress"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewGround"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="#07000000"
                android:textColor="@color/colorAccent"
                android:text="20-22 Marion St, Leichhardt"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageViewVISIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_toRightOf="@+id/textviewDate"
                android:src="@mipmap/southern_branch" />



            <ImageView
                android:id="@+id/imageViewHOME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textviewDate"
                android:padding="20dp"
                android:background="@null"
                android:src="@mipmap/apia_logo" />

        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNPL"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="NPL 2 NSW Women's 2019"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/colorlightgrey"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <Spinner
            android:id="@+id/spRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:gravity="left"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"/>


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  >

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewHOME"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="APIA Leichhardt"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewVISIT"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Southern Branch"
        android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlightgrey"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewfirst"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1st Grade: 5:00pm"
           android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp"            />

        <TextView
            android:id="@+id/textView1VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewres"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Reserves : 5:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp"            />

        <TextView
            android:id="@+id/textView2VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewr17"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Under 17 : 3:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView3VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Under 15 : 1:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView4VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Under 14 : 11:30am"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />



        <TextView
            android:id="@+id/textView5VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />
    </LinearLayout>

        <TextView
            android:id="@+id/textViewREPORT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="(Round Report)"
            android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageViewcubic"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:onClick="openBrowserCubic"
        android:src="@drawable/cubiclargenew"
        android:tag="http://cubicgroup.biz/cubic-design-construction/"/>
</LinearLayout>
    </TableLayout>
</ScrollView>