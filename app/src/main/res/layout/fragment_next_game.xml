<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/imageViewLB"
        android:layout_width="273dp"
        android:layout_height="145dp"

        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/firstgradegf" />

    </LinearLayout>

    <TextView

        android:id="@+id/textViewNPL"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="NPL 2 NSW Women's 2018"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/colorlightgrey"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">


        <Spinner
            android:id="@+id/spRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:textStyle="bold"
            android:gravity="left"/>

        <Spinner
            android:id="@+id/spDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:gravity="right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewHOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:src="@mipmap/apia_logo" />

        <TextView
            android:id="@+id/textViewVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="center|center_vertical"
            android:text="Vs"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewVISIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/southern_branch" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >


    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewHOME"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="APIA Leichhardt"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewVISIT"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Southern Branch"

        android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlightgrey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.acacias.altfc.MatchFragment">

        <TextView
            android:id="@+id/textViewGround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Lambert park"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewMAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textViewGround"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="( Map )"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />

    </RelativeLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewfirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1st Grade: 5:00pm"
           android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp"            />

        <TextView
            android:id="@+id/textView1VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Reserves : 5:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp"            />

        <TextView
            android:id="@+id/textView2VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textViewr17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Under 17 : 3:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView3VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Under 15 : 1:00pm"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView4VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5HomeScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="-" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Under 14 : 11:30am"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView5VisitScore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:text="-" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageViewcubic"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cubiclarge"
        android:tag="http://cubicgroup.biz/cubic-design-construction/"/>

</LinearLayout>
