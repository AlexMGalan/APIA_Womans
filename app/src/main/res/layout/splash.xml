<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <ImageView
        android:id="@+id/imageViewCubic"
        android:layout_width="201dp"
        android:layout_height="34dp"
        android:background="@drawable/cubic_sponsor"
        android:layout_above="@+id/textViewTitle1"
        android:layout_centerHorizontal="true"
 />

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:padding="40dp"
        android:layout_above="@+id/imageViewAPIA"
        android:text="APIA Leichhardt FC"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewAPIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/apia_logo_new"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/imageViewAPIA"
        android:gravity="center_horizontal"
        android:text="NSW Womens NPL / Girls SAP 2020"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout >